<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<div xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:c="http://java.sun.com/jsp/jstl/core"
	xmlns:spring="http://www.springframework.org/tags"
	xmlns:form="http://www.springframework.org/tags/form" 
	xmlns:sec="http://www.springframework.org/security/tags"
	version="2.0">
	<jsp:directive.page contentType="text/html;charset=UTF-8" />
	<jsp:output omit-xml-declaration="yes" />

<script type="text/javascript">
function fillDate() {
	document.getElementById('reservation-date').valueAsDate = new Date();
}

function minDate() {
	document.getElementById('reservation-date').min = new Date().toISOString().slice(0, 10);
}

function maxDate() {
	document.getElementById('birth-date').max = new Date().toISOString().slice(0, 10);
}

function validateForm() {
    var x = document.getElementById('start-time').value;
    var y = document.getElementById('end-time').value;

    if (+x > +y) {
        alert("De eindtijd moet na de starttijd zijn!");

        return false;
    }
}

function checkTime() {
	var x = document.getElementById('start-time').value;
    var y = document.getElementById('end-time').value;

    if (+x > +y) {
        document.getElementById('start-time').style.borderColor = "red";
        document.getElementById('end-time').style.borderColor = "red";
    }

    if (+y > +x) {
    	document.getElementById('start-time').style.borderColor = "";
        document.getElementById('end-time').style.borderColor = "";
    }
}
</script>

	<h2 style="text-align: center; font-family:sans-serif; display:block; text-transuppercase;">Reserveringsformulier</h2>

	<c:if test="${not empty message}">
		<div id="message" class="${message.type}">${message.message}</div>
	</c:if>
	<form:form modelAttribute="reservation" id="form" method="post">
	<fieldset>
		<div class="pure-control-group">
			<form:label path="restaurant">Restaurant</form:label>
			<!-- uit te zoeken hoe dit moet ? -->
			<form:select path="restaurant" name="restaurant" id="restaurant" class="pure-forminput-2-3">
			<c:forEach items="${restaurants}" var="restaurant">
				<form:option value="${restaurant}">${restaurant.id}</form:option>
			</c:forEach>
				<!-- <option value="a">Nader in te vullen</option>
