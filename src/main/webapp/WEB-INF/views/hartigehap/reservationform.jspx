		<div class="pure-control-group">
			<form:label path="customer.partySize" style="font-weight: bold;">Aantal personen</form:label>
			<form:input path="customer.partySize" type="number" min="1" max="12" class="pure-forminput-2-3" id="party-size" placeholder="Aantal personen" />
		</div>

		<div class="pure-control-group">
			<form:label path="customer.firstName" style="font-weight: bold;">Voornaam</form:label>
			<form:input path="customer.firstName" type="text" class="pure-forminput-2-3" id="first-name" placeholder="Voornaam"  />
		</div>
		<div class="pure-control-group">
			<form:label path="customer.lastName" style="font-weight: bold;">Achternaam</form:label>
			<form:input path="customer.lastName" type="text" class="pure-forminput-2-3" id="first-name" placeholder="Achternaam"  />
		</div>
		
		<div class="pure-control-group">
